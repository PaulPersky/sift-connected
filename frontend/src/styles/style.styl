@import '@redsift/ui-rs-hero/dist/css/ui-rs-hero.min.css'
@import '@redsift/ui-rs-core/dist/css/ui-rs-core.min.css'
@import 'tingle.js/dist/tingle.min.css'

body, html
  height: 100%

.-bg-hero
  background-image: url('../../assets/hero.jpg')
  background-color: rgb(42, 24, 22)
  background-image: -webkit-image-set(
    url('../../assets/hero.jpg') 1x,
    url('../../assets/hero-2x.jpg') 2x
  )

.hero-sticky-header--active
  box-shadow: 0px 0px 2px 2px rgba(0, 0, 0, 0.15)
  background-image: url('../../assets/hero.jpg')
  background-image: -webkit-image-set(
    url('../../assets/hero.jpg') 1x,
    url('../../assets/hero-2x.jpg') 2x
  )

/*
 * Email-thread styles
 */
.detail
  height: 100%
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  padding: 8px
  box-sizing: border-box
  justify-content: center

.importance
  height: 80%
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

.importance-logo
  height: 60px
  width: 60px

.importance-text
  margin-top: 0px
  margin-bottom: 8px
  font-size: 0.6em
  text-align: center

.connection-list
  width: 100%
  box-sizing: border-box
  padding: 16px

.connection-text
  margin-top: 0px
  margin-bottom: 8px
  font-size: 0.6em

.social
  height: 20%
  width: 100%
  display: flex
  flex-direction: row
  align-items: flex-end
  justify-content: flex-end

.social-logo
  width: 32px
  height: 32px

.opaque
  opacity: 0.1

.zoom
  transform: scale(1.2);

/*
 * Summary styles
 */
.popup,
.disconnected
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  height: 100%
  box-sizing: border-box

.connected
  display: flex
  flex-wrap: wrap
  box-sizing: border-box

.card
  width: 50%
  padding: 16px
  display: flex
  flex-direction: column
  justify-content: center
  box-sizing: border-box

.card-one
  border-right: 1px solid #c0c0c0
  border-bottom: 1px solid #c0c0c0

.card-two
  border-bottom: 1px solid #c0c0c0
  align-items: center

.card-three
  border-right: 1px solid #c0c0c0

.card__header
  width: 100%
  margin-bottom: 8px
  color: darkgreen
  font-size: 14px
  font-weight: 800

.card__body
  flex-grow: 1
  display: flex
  flex-direction: column
  justify-content: center

.stats__body
  flex-grow: 1
  width: 100%
  display: flex
  flex-wrap: wrap
  justify-content: space-around

.my-twitter-info,
.my-angel_list-info,
.social-info
  width: 100%
  display: flex
  align-items: center
  margin-bottom: 8px

.stats-info
  display: flex
  align-items: center

.social-icon
  width: 32px

.social-icon:hover
  transform: scale(1.2)

.my-twitter-name,
.my-angel_list-name,
.social-name
  margin-left: 8px
  font-size: 16px

.stat-icon
  width: 40px

.stat
  font-size: 32px
  font-family: Source Code Pro

a.my-twitter-link,
a.my-angel_list-link,
a.icon-link
  line-height: normal
  font-size: 0px

button.tingle-modal__close
  border: none
  background: none

.login-button
  margin: 5px

@media (max-width: 480px)
  .content
    height: 100%
    box-sizing: border-box

  .connected
    height: 100%

  .hero
    display: none

  .hero-sticky-header
    display: none

  .card
    height: 50%

  .help
    display: none

@media (max-height: 230px)
  .card
    padding: 0px
    width: 50%
    height: 100%

  .card-one
    display: none

  .card-two
    border: none
    border-right: 1px solid #c0c0c0

  .card-three
    display: none

  .card-four
    padding-left: 20px

@media (max-width: 230px) and (max-height: 230px)
  .card-two
    width: 100%
    height: 100%
    border: none

  .card-four
    display: none

@media (max-width: 230px) and (min-height: 400px)
  .connected
    flex-direction: column

  .card
    border: none
    width: 100%
    height: 50%
    padding: 0px

  .card-one
    display: none

  .card-two
    border-bottom: 1px solid #c0c0c0

  .card-three
    padding-top: 20px

  .card-four
    display: none
